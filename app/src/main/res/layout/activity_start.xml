<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="0dp"
        android:text="Ngobrol"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="40sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/start_login_btn"
        android:layout_width="215dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/already_have_account"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/start_req_btn"
        android:layout_width="215dp"
        android:layout_height="55dp"
        android:layout_below="@+id/start_login_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="84dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/need_a_new_account"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/start_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="127dp"
        android:contentDescription="IconApp"
        app:srcCompat="@drawable/chat_logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_logo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="79dp"
        android:layout_toEndOf="@+id/textView"
        android:text="Yuk!"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="40sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Simple. Secure."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Real Time Messaging."
        android:textSize="16sp" />

</RelativeLayout>